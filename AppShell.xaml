<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProgettoCasinoGava.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProgettoCasinoGava"
    Title="ProgettoCasinoGava"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="ContoCorrente"
            ContentTemplate="{DataTemplate local:ContoCorrente}"
            Route="ContoCorrente" />
        <ShellContent
            Title="Regole"
            ContentTemplate="{DataTemplate local:Info}"
            Route="Regole e funzionamento" />
        <Tab Title="Giochi">
            <ShellContent
            Title="Craps"
            ContentTemplate="{DataTemplate local:Craps}"
            Route="Craps" />
        <ShellContent
            Title="Blackjack"
            ContentTemplate="{DataTemplate local:Blackjack}"
            Route="Blackjack" />
        </Tab>
    </TabBar>
</Shell>
